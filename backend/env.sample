PORT=5000
JWT_SECRET=super-secret-key

# SQL Server Connection (set SQL_DISABLED=true if using API only, no direct SQL connection)
# IMPORTANT: Set both to 'false' to enable SQL connection (ESSL TrackLite requires SQL)
SQL_DISABLED=false
USE_API_ONLY=false

# eTimeTrack / Tracklie SQL connection
ETIMETRACK_ENABLED=true
ETIME_SQL_SERVER=JSAM\SQLEXPRESS
ETIME_SQL_DB=etimetracklite1
ETIME_SQL_USER=essl
ETIME_SQL_PASSWORD=essl

# Realtime DeviceLogs schema mapping
ETIME_SQL_RT_TABLE=DeviceLogs
ETIME_SQL_RT_USER_COLUMN=UserId
ETIME_SQL_RT_LOG_COLUMN=LogDate
ETIME_SQL_RT_DOWNLOAD_COLUMN=DownloadDate
ETIME_SQL_RT_DEVICE_COLUMN=DeviceId
ETIME_SQL_RT_VERIFY_COLUMN=
ETIME_SQL_RT_DIRECTION_COLUMN=Direction
ETIME_SQL_RT_WORKCODE_COLUMN=WorkCode
ETIME_SQL_RT_DEVICELOGID_COLUMN=DeviceLogId
ETIME_SQL_RT_LOCATION_COLUMN=LocationAddress
ETIME_SQL_RT_TEMP_COLUMN=BodyTemperature
ETIME_SQL_RT_MASK_COLUMN=IsMaskOn

# Employee reference table mapping
ETIME_SQL_EMPLOYEE_TABLE=Employees
ETIME_SQL_EMPLOYEE_ID_COLUMN=EmployeeCode
ETIME_SQL_EMPLOYEE_NAME_COLUMN=EmployeeName

# ESSL Device Configuration
ESSL_DEVICE_IP=192.168.0.5
ESSL_DEVICE_PORT=4370

# ESSL TrackLite API Configuration (DISABLED - ESSL TrackLite doesn't have REST API)
ESSL_TRACKLITE_USE_API=false
ESSL_TRACKLITE_SERVER=JSAM
ESSL_TRACKLITE_PORT=80
ESSL_TRACKLITE_USERNAME=essl
ESSL_TRACKLITE_PASSWORD=essl
# Optional: Full connection string (will extract server name from it)
# ESSL_TRACKLITE_CONNECTION_STRING=Data Source=JSAM\SQLEXPRESS;Integrated Security=True;...




